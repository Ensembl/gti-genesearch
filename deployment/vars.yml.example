# remote_user
remote_user_name : ensprod

# location to deploy ES & Java
base_dir : /data/search
# optional proxy for working behind a firewall
proxy_host : TODO
proxy_port : TODO
http_proxy : "http://{{ proxy_host }}:{{ proxy_port }}"

## ES
es_logs : "{{ base_dir }}/es_logs"
es_data : "{{ base_dir }}/es_data"
es_cluster : genesearch
es_dir : "{{ base_dir }}/es"
es_pid : {{ base_dir }}/es.pid
# list of hosts that make up the ES cluster
es_hosts: "{{ groups['es_head'] + groups['es_data'] }}"
# should be total_nodes/2+1
es_min_masters : 5
java_heap : 16g

## WEBAPP
web_dir : "{{ base_dir }}/web"
webapp_pid : {{ base_dir }}/web.pid
webapp_port : 8080
# git tag to use (must match gradle version)
webapp_version: 0.1
# RAM for head node
webapp_java_opts : "-Xmx2g -Dhttps.proxyHost={{ proxy_host }} -Dhttps.proxyPort={{ proxy_port }}"
# solr credentials
solr_expression_url : TODO
solr_experiments_url : TODO
# ES node to contact
es_head : 127.0.0.1
# ebisc details
ebisc_user : TODO
ebisc_token : TODO
ebisc_accession : TODO
ega_url : TODO
# ssl
keystore_name : keystore.p12
key_alias : TODO
key_password : TODO
# active spring_profile
spring_profile : default

