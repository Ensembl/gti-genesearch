{
  "settings": {
    "number_of_shards": "SHARDN",
    "number_of_replicas": 0,
    "max_result_window": 50000,
    "analysis": {
      "analyzer": {
        "string_lowercase": {
          "type":      "custom",
          "tokenizer": "standard",
          "char_filter": [
            "html_strip"
          ],
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      },
      "normalizer": {
        "keyword_lowercase": {
          "type": "custom",
          "filter": ["lowercase"]
        }
      }
    }
  },
  "aliases": {
    "external_features": {}
  },
  "mappings": {
    "external_feature": {
      "dynamic": "false",
      "properties": {
        "genome": {
          "type": "keyword",
          "index": true,
          "norms": false
        },
        "name": {
          "type": "keyword",
          "index": true
        },
        "description": {
          "type": "keyword",
          "index": true
        },
        "class": {
          "type": "keyword",
          "index": true
        },
        "set_name": {
          "type": "keyword",
          "index": true
        },
        "locations": {
          "type": "nested",
          "properties": {
            "seq_region_name": {
              "type": "keyword",
              "index": true,
              "norms": false
            },
            "start": {
              "type": "long",
              "index": true
            },
            "end": {
              "type": "long",
              "index": true
            },
            "strand": {
              "type": "keyword",
              "index": true,
              "norms": false
            }
          }
        }
      }
    }
  }
}
