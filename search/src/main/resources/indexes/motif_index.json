{
  "settings": {
    "number_of_shards": "SHARDN",
    "number_of_replicas": 0,
    "max_result_window": 50000,
    "analysis": {
      "analyzer": {
        "string_lowercase": {
          "type":      "custom",
          "tokenizer": "standard",
          "char_filter": [
            "html_strip"
          ],
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      },
      "normalizer": {
        "keyword_lowercase": {
          "type": "custom",
          "filter": ["lowercase"]
        }
      }
    }
  },
  "aliases": {
    "binding_motifs": {}
  },
  "mappings": {
    "binding_motif": {
      "dynamic": "false",
      "properties": {
        "genome": {
          "type": "keyword",
          "index": true,
          "norms": false
        },
        "seq_region_name": {
          "type": "keyword",
          "index": true,
          "norms": false
        },
        "seq_region_start": {
          "type": "keyword",
          "index": true,
          "norms": false
        },
        "seq_region_end": {
          "type": "keyword",
          "index": true,
          "norms": false
        },
        "seq_region_strand": {
          "type": "keyword",
          "index": true,
          "norms": false
        },
        "score": {
          "type": "double",
          "index": true,
          "norms": false
        },
        "stable_id": {
          "type": "keyword",
          "index": true,
          "norms": false
        },
        "display_label": {
          "type": "keyword",
          "index": true,
          "norms": false
        }
      }
    }
  }
}
